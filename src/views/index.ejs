<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="/images/microsoft-terms-and-office (3).png" type="image/png">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/i.css" />
  <title>Microsoft Teams</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top scrolling-navbar">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img src="/images/microsoft-terms-and-office (3).png" width="30" height="30" alt="">
      </a>
      <div id="navbarSupportedContent-7">
        <div class="col-md-10">

        </div>
        <% if(user) { %>
        <div class="float-right nav-button my-0">
          <a class="btn  btn-dark btn-md pull-md-right pull-xl-right pull-lg-right pull-sm-right pull-xs-right" href="/logout">LogOut</a>
        </div>
        <%
        }
        else{ %>
        <div class="float-right nav-button my-0">
          <a class="btn  btn-dark btn-md pull-md-right pull-xl-right pull-lg-right pull-sm-right pull-xs-right" href="/login">Login</a>
        </div>
        <%}
        %>


      </div>
    </div>
  </nav>
  <div class="view rgba-gradient d-flex justify-content-center align-items-center">
    <div class="container">
      <div class="row">
        <div class="col-md-6 white-text text-center text-md-left mt-xl-5 mb-5">
          <h1 class="h1-responsive font-weight-bold mt-sm-5">Microsoft Teams </h1>
          <hr class="hr-light">
          <h6 class="mb-4">Meet, chat, call, and collaborate in just one place.</h6>
          <% if(user) { %>
          <a class="btn  btn-dark btn-lg" href="/room">New Meeting</a>
          <%
          }
          else{ %>
          <a class="btn  btn-dark btn-lg" href="/login">New Meeting</a>
          <%}
          %>
          <% if(user) { %>
          <button type="button" class="btn btn-dark btn-lg" data-toggle="modal" data-target="#exampleModalCenter">
            Join Room
          </button>
          <%
          }
          else{ %>
          <a class="btn  btn-dark btn-lg" href="/login">Join Room</a>
          <%}
          %>


          <!-- Modal -->
          <form action="/userroom" method="POST">
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Meeting ID</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>

                  <div class="modal-body">
                    <div class="form-group">
                      <input id="txt" name="txt" class="form-control" placeholder="Enter your meeting ID here..." />
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-dark btn-lg" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-dark btn-lg" id="save">Join</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="col-md-6 col-xl-6 mt-xl-6">
          <img src="https://img-prod-cms-rt-microsoft-com.akamaized.net/cms/api/am/imageFileData/RE4E1CH?ver=dd82&q=90&m=2&h=768&w=1024&b=%23FFFFFFFF&aim=true" alt="" class="img-fluid">
        </div>
      </div>
    </div>
  </div>



  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>
